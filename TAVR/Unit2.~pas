{$R *.dfm}

procedure TForm2.Button1Click(Sender: TObject);
begin
  timer1.Enabled:=true;
 timer2.Enabled:=true;
 timer3.Enabled:=true;
 timer4.Enabled:=true;
 timer5.Enabled:=true;
 timer6.Enabled:=true;
 timer7.Enabled:=true;
 timer8.Enabled:=true;
 timer9.Enabled:=true;
 timer10.Enabled:=true;
  timer11.Enabled:=true;
  timer12.Enabled:=true;
  timer13.Enabled:=true;
  timer14.Enabled:=true;
  timer15.Enabled:=true;
    timer16.Enabled:=true;
    timer17.Enabled:=true;
    timer18.Enabled:=true;
end;

procedure TForm2.Timer1Timer(Sender: TObject);
begin
if label1.left>170
  then
    label1.Left:=label1.Left-5
   else
    label1.Top:=label1.Top+5;
if label1.top>100-9then Timer1.Enabled:=false;
end;

procedure TForm2.Timer2Timer(Sender: TObject);
begin
 if label2.left>300
  then
    label2.Left:=label2.Left-5
   else
    label2.Top:=label2.Top+5;
if label2.top>100-9then Timer2.Enabled:=false;
end;

procedure TForm2.Timer3Timer(Sender: TObject);
begin
if label4.left>330
  then
    label4.Left:=label4.Left-5
   else
    label4.top:=label4.Top-5;
if label4.top<100+100+100+100+100+90 then Timer3.Enabled:=false;
end;

procedure TForm2.Timer4Timer(Sender: TObject);
begin
    if label3.left>250
  then
    label3.Left:=label3.Left-5
   else
    label3.top:=label3.Top-5;
if label3.top<100+100+100+100+100+90then Timer4.Enabled:=false;
end;

procedure TForm2.Timer5Timer(Sender: TObject);
begin
shape1.Visible:=true;
memo1.Visible:=true;
timer5.Enabled:=false;
end;

procedure TForm2.Timer6Timer(Sender: TObject);
begin
 shape1.Visible:=false;
 memo1.Visible:=false;
timer6.Enabled:=false;
end;

procedure TForm2.Timer7Timer(Sender: TObject);
begin
memo2.Visible:=true;
shape2.Visible:=true;
shape3.Visible:=true;
label5.Visible:=true;
label6.Visible:=true;
label7.Visible:=true;
timer7.Enabled:=false;

end;

