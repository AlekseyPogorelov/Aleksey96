{$R *.dfm}

procedure TForm4.Button1Click(Sender: TObject);
begin
timer1.Enabled:=true;
timer2.Enabled:=true;
timer3.Enabled:=true;
timer4.Enabled:=true;
timer5.Enabled:=true;
timer6.Enabled:=true;
timer7.Enabled:=true;
timer8.Enabled:=true;
timer9.Enabled:=true;
timer10.Enabled:=true;
timer11.Enabled:=true;
timer12.Enabled:=true;
timer13.Enabled:=true;
timer14.Enabled:=true;
timer15.Enabled:=true;
end;

procedure TForm4.Timer1Timer(Sender: TObject);
begin
if label1.left>170
  then
    label1.Left:=label1.Left-5
   else
    label1.Top:=label1.Top+5;
if label1.top>100-9then Timer1.Enabled:=false;
end;

procedure TForm4.Timer2Timer(Sender: TObject);
begin
if label2.left>300
  then
    label2.Left:=label2.Left-5
   else
    label2.Top:=label2.Top+5;
if label2.top>100-9then Timer2.Enabled:=false;
end;

procedure TForm4.Timer3Timer(Sender: TObject);
begin
if label4.left>330
  then
    label4.Left:=label4.Left-5
   else
    label4.top:=label4.Top-5;
if label4.top<100+100+100+100+100+90 then Timer3.Enabled:=false;
end;

procedure TForm4.Timer4Timer(Sender: TObject);
begin
   if label3.left>250
  then
    label3.Left:=label3.Left-5
   else
    label3.top:=label3.Top-5;
if label3.top<100+100+100+100+100+90then Timer4.Enabled:=false;
end;

procedure TForm4.Timer5Timer(Sender: TObject);
begin
shape1.Visible:=true;
memo1.Visible:=true;
timer5.Enabled:=false;
end;

procedure TForm4.Timer6Timer(Sender: TObject);
begin
shape1.Visible:=false;
memo1.Visible:=false;
timer6.Enabled:=false;
end;

procedure TForm4.Timer7Timer(Sender: TObject);
begin
shape2.Visible:=true;
memo2.Visible:=true;
shape3.Visible:=true;
label5.Visible:=true;
label6.Visible:=true;
label7.Visible:=true;
timer7.Enabled:=false;
end;

procedure TForm4.Timer8Timer(Sender: TObject);
begin
label8.Visible:=true;
label9.Visible:=true;
label10.Visible:=true;
label11.Visible:=true;
Timer8.Enabled:=false;
end;

procedure TForm4.Timer9Timer(Sender: TObject);
begin
shape2.Visible:=false;
memo2.Visible:=false;
shape3.Visible:=false;
label5.Visible:=false;
label6.Visible:=false;
label7.Visible:=false;
label8.Visible:=false;
label9.Visible:=false;
label10.Visible:=false;
label11.Visible:=false;
Timer9.Enabled:=false;
end;

procedure TForm4.Timer10Timer(Sender: TObject);
begin
memo3.Visible:=true;
shape4.Visible:=true;
label12.Visible:=true;
timer10.Enabled:=false;
end;

procedure TForm4.Timer11Timer(Sender: TObject);
begin
shape4.Visible:=false;
memo3.Visible:=false;
label12.Visible:=false;
timer11.Enabled:=false;
end;

procedure TForm4.Timer12Timer(Sender: TObject);
begin
memo4.Visible:=true;
shape6.Visible:=true;
Timer12.Enabled:=false;
end;

procedure TForm4.Timer13Timer(Sender: TObject);
begin
memo4.Visible:=false;
 shape6.Visible:=false;
Timer13.Enabled:=false;
end;

procedure TForm4.Timer14Timer(Sender: TObject);
begin
memo5.Visible:=true;
shape5.Visible:=true;
label13.Visible:=true;
timer14.Enabled:=false;
end;

procedure TForm4.Timer15Timer(Sender: TObject);
begin
memo5.Visible:=false;
shape5.Visible:=false;
  label13.Visible:=false;
timer15.Enabled:=false;
end;

