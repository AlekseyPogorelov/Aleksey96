    Shape2: TShape;
    Shape3: TShape;
    Shape4: TShape;
    Shape5: TShape;
    Timer5: TTimer;
    Timer6: TTimer;
    Timer7: TTimer;
    Label7: TLabel;
    Label5: TLabel;
    Label6: TLabel;
    Timer8: TTimer;
    Label8: TLabel;
    Label9: TLabel;
    Label10: TLabel;
    Label11: TLabel;
    Timer9: TTimer;
    Timer10: TTimer;
    Label12: TLabel;
    Timer11: TTimer;
    Shape6: TShape;
    Timer12: TTimer;
    Timer13: TTimer;
